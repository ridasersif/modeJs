<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title><%= mytitle %></title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background-color: #fff;
    }

    th, td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #007bff;
      color: white;
    }

    tr:hover {
      background-color: #f1f1f1;
    }

    .actions button {
      margin-right: 5px;
      padding: 5px 10px;
      border: none;
      cursor: pointer;
      border-radius: 4px;
      color: white;
    }

    .delete-btn {
      background-color: #dc3545;
    }

    .update-btn {
      background-color: #28a745;
    }

    .actions form {
      display: inline;
    }
  </style>
</head>
<body>

  <h1><%= mytitle %></h1>

  <table>
    <thead>
      <tr>
        <th>Prénom</th>
        <th>Nom</th>
        <th>Email</th>
        <th>Téléphone</th>
        <th>Actions</th> <!-- ✅ عمود جديد -->
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.firstName || '' %></td>
          <td><%= user.lastName || '' %></td>
          <td><%= user.email || '' %></td>
          <td><%= user.phone || '' %></td>
          <td class="actions">
            <!-- زر التحديث -->
            <form action="/users/<%= user._id %>/edit" method="GET">
              <button type="submit" class="update-btn">Update</button>
            </form>

            <!-- زر الحذف -->
            <form action="/users/<%= user._id %>?_method=DELETE" method="POST">
              <button type="submit" class="delete-btn">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</body>
</html>
